{
    "name": "Server Planing",
    "description": "Calculates the number of servers needed to host a specified amount of virtual machines.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7"
    },
    "autoload": {
        "psr-4": {"": "src/"}
    },
    "scripts": {
        "run": [
            "echo 'Started web server on http://localhost:8888'",
            "php -S localhost:8888 -t web"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "phpunit/php-code-coverage": "^5.0",
        "phpmetrics/phpmetrics": "^2.4"
    }
}
